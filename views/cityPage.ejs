<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>City Weather</title>
    <script src="./../fillPage.js"></script>
    <style>
      /* Import Montserrat font from Google Fonts */
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap");

      /* Set font family for all elements */

      /* Set font family for headings */
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Montserrat", sans-serif;
        font-weight: 700;
      }

      body {
        font-family: "Montserrat", sans-serif;
        margin: 0;
        padding: 0;
      }
      .container {
        width: 80%;
        margin: 0 auto;
      }
      h1 {
        text-align: center;
        margin-top: 40px;
      }
      .weather-box {
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-top: 40px;
        padding: 20px;
      }
      .city-name {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
      }
      .temperature {
        font-size: 36px;
        font-weight: bold;
        margin: 10px 0;
      }
      .conditions {
        font-size: 24px;
        margin-top: 10px;
      }
      .temperature-range {
        font-size: 16px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>City Weather</h1>
      <div class="weather-box">
        <div class="city-name" id="city-name"></div>
        <div class="temperature" id="current-temperature"></div>
        <div class="conditions" id="conditions"></div>
        <div class="temperature-range">
          <span id="day-temperature"></span>
          <span id="night-temperature"></span>
        </div>
      </div>
    </div>
  </body>
</html>
